<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="kr.co.vida.dao">
  	<select id="getImgOne" parameterType="int" resultType="idto" >
  		SELECT img_no, goods_no, img_name, img_status
  		<!-- 
			img_no as imgNo
			 ,goods_no as goodsNo
			 ,img_name as imgName
			 ,img_status as imgStatus
		  -->
  		FROM image
  		WHERE img_no = #{img_no}
  	</select>
  	<select id="getImgAll" resultType="idto">
  		SELECT img_no, goods_no, img_name, img_status
  		FROM image
  		WHERE img_status = 0;
  	</select>
  </mapper>